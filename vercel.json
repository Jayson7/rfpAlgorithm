{
  "version": 2,
  "builds": [
    {
      "src": "rfp_main/wsgi.py",
      "use": "@vercel/python",
      "config": { "maxLambdaSize": "50mb", "runtime": "python3.9" },
      "functions": {
        "collectstatic": { "runtime": "vercel-python", "memory": 128 }
      }
    }
  ],

  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "/static/$1"
    },

    {
      "src": "/(.*)",
      "dest": "rfp_main/wsgi.py"
    }
  ]
}
